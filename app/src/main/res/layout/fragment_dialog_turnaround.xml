<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="content"
            type="String" />

        <variable
            name="cancelText"
            type="String" />

        <variable
            name="confirmText"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_dialog_ta_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="30dp"
            android:text="@{title}"
            android:textAlignment="center"
            android:textAppearance="@style/sub_headline_semi_bold"
            android:textColor="@color/turnaround_gray_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="어제 집안일을 못하셨네요." />

        <TextView
            android:id="@+id/tv_dialog_ta_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:text="@{content}"
            android:textAlignment="center"
            android:textAppearance="@style/body2_regular"
            android:textColor="@color/turnaround_gray_9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_ta_title"
            tools:text="어제 집안일을 못하셨네요." />

        <TextView
            android:id="@+id/tv_dialog_ta_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/shape_gray2_rect_fill_10"
            android:paddingVertical="14dp"
            android:text="@{cancelText}"
            android:textAlignment="center"
            android:textAppearance="@style/body2_semi_bold"
            android:textColor="@color/turnaround_gray_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_dialog_ta_confirm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_ta_content"
            tools:text="아니요" />

        <TextView
            android:id="@+id/tv_dialog_ta_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/shape_gray10_rect_fill_10"
            android:paddingVertical="14dp"
            android:text="@{confirmText}"
            android:textAlignment="center"
            android:textAppearance="@style/body2_semi_bold"
            android:textColor="@color/turnaround_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_dialog_ta_cancel"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_ta_content"
            tools:text="네! 예약할게요" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
